include tag_hues

-
  var hashHue = function(s) {
    var h = 0;
    if (!s) return 0;
    for (var i = 0; i < s.length; i++) {
      h = (h * 31 + s.charCodeAt(i)) >>> 0;
    }
    return h % 360;
  };

mixin tag(name)
  - var t = String(name || '')
  - var hue = (typeof TAG_HUE_BY_NAME !== 'undefined' && TAG_HUE_BY_NAME[t] !== undefined) ? TAG_HUE_BY_NAME[t] : hashHue(t)
  if t
    span(style='--tag-hue: #{hue}')= t
  else
    span(style='--tag-hue: #{hue}')
      block

